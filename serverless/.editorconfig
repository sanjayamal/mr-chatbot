root = false

[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.py]
charset = utf-8
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{yaml,json}]
indent_style = space
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
